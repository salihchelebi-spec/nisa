{
  "manifest_version": 3,
  "name": "Ajan Nil Chrome Uzantısı",
  "version": "1.0.0",
  "description": "WhatsApp Web için çok dilli akıllı asistan.",
  "permissions": [
    "storage", "activeTab", "scripting", "alarms"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://web.whatsapp.com/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": {
    "default_popup": "sidepanel.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "content_scripts": [
    { "matches": ["https://web.whatsapp.com/*"], "js": ["content.js"] }
  ],
  "web_accessible_resources": [
    { "resources": [ "sidepanel.html", "assets/*" ], "matches": [ "https://web.whatsapp.com/*" ] }
  ]
}
